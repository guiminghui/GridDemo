<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/all_layout"
                android:background="@drawable/item_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView android:id="@+id/name" android:layout_centerHorizontal="true" android:layout_width="wrap_content"
              android:layout_height="wrap_content"/>
    <TextView android:id="@+id/sex" android:layout_below="@+id/name" android:layout_centerHorizontal="true"
              android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/age" android:layout_below="@+id/sex" android:layout_centerHorizontal="true"
              android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</RelativeLayout>